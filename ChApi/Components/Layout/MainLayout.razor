@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<div class="page">
    <MudLayout>
        <NavMenu />
        <main>
            <article class="content px-4">
                <MudMainContent>
                    <MudContainer MaxWidth="MaxWidth.Medium" Class="ma-auto pa-4">  
                        @Body
                    </MudContainer>
                </MudMainContent>
            </article>
        </main>
    </MudLayout>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
